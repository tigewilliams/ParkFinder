<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorBackground</item>
    </style>

    <style name="horizontalDivider">
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/divider_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/divider_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/divider_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_vertical_margin</item>
    </style>

    <style name="ParkImageStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:layout_marginBottom">@dimen/parkview_vertical_margin</item>
    </style>

    <style name="ParkNameStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="ParkInfoListStyle">
        <item name="android:layout_marginLeft">@dimen/parkview_horizontal_Margin</item>
        <item name="android:layout_marginRight">@dimen/parkview_horizontal_Margin</item>
        <item name="android:layout_marginTop">@dimen/parkview_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/parkview_vertical_margin</item>
    </style>

    <style name="ParkDescriptionStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/parkview_horizontal_Margin</item>
        <item name="android:layout_marginRight">@dimen/parkview_horizontal_Margin</item>
        <item name="android:layout_marginTop">@dimen/parkview_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/parkview_vertical_margin</item>
        <item name="android:background">@color/colorTextAreaBackground</item>
        <item name="android:textColor">@color/colorTextArea</item>
    </style>

    <style name="ParkNavButtonStyle">
        <item name="android:background">@drawable/button_circle</item>
        <item name="android:layout_width">@dimen/parkview_nav_button_size</item>
        <item name="android:layout_height">@dimen/parkview_nav_button_size</item>
        <item name="android:padding">@dimen/parkview_nav_button_padding</item>
        <item name="android:src">@drawable/ic_navigation_24dp</item>
    </style>

    <style name="ParkMapStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/parkview_horizontal_Margin</item>
        <item name="android:layout_marginRight">@dimen/parkview_horizontal_Margin</item>
        <item name="android:layout_marginTop">@dimen/parkview_vertical_margin</item>
        <item name="android:layout_marginBottom">@dimen/parkview_vertical_margin</item>
        <item name="android:layout_height">200dp</item>
    </style>

    <style name="ParkCardStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/park_card_margin</item>
        <item name="android:padding">@dimen/park_card_padding</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/colorCardBackground</item>
    </style>

    <style name="ParkCardImageStyle">
        <item name="android:layout_width">@dimen/park_card_image_size</item>
        <item name="android:layout_height">@dimen/park_card_image_size</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="ParkCardNameStyle">
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ParkCardOccupancyContainer">
        <item name="android:layout_marginTop">@dimen/park_card_padding</item>
        <item name="android:layout_marginBottom">@dimen/park_card_padding</item>
        <item name="android:layout_marginRight">@dimen/park_card_padding</item>
    </style>

    <style name="ParkCardOccupancyIconStyle">
        <item name="android:layout_width">@dimen/occupancy_icon_size</item>
        <item name="android:layout_height">@dimen/occupancy_icon_size</item>
    </style>

    <style name="ParkCardOccupancyIndicatorStyle">
        <item name="android:layout_width">@dimen/occupancy_bar_width</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
