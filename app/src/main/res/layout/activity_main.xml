<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.android.parkfinder.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <!-- A CardView that contains a TextView -->
            <android.support.v7.widget.CardView
                style="@style/ParkCardStyle"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorCardBackground"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/card_vertical_margin"
                        >

                        <!-- The main picture of the park -->
                        <ImageView
                            android:id="@+id/parkImage"
                            style="@style/ParkImageStyle"
                            android:src="@drawable/south_rose_hill_kirkland_1" />

                        <!-- The name of the park -->
                        <TextView
                            android:id="@+id/parkName"
                            style="@style/ParkNameStyle"
                            android:text="@string/south_rose_hill_park"
                            android:layout_marginLeft="@dimen/card_horizontal_margin"
                            android:layout_marginRight="@dimen/card_horizontal_margin"
                            android:layout_marginTop="@dimen/card_vertical_margin"
                            android:layout_below="@id/parkImage"
                            />

                        <!-- The Navigate To button -->
                        <ImageButton
                            style="@style/ParkNavButtonStyle"
                            android:id="@+id/navToParkButton"
                            android:layout_above="@id/parkName"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="-16dp"
                            android:layout_marginRight="13dp"
                            />

                    </RelativeLayout>

                    <!-- Info list -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_horizontal_margin"
                        android:layout_marginRight="@dimen/card_horizontal_margin"
                        android:layout_marginBottom="@dimen/card_vertical_margin"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_access_time_24dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:textColor="@android:color/white"
                                android:text="Open from 8:00 AM to Dusk"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_account_child_24dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:textColor="@android:color/white"
                                android:text="Safe for toddlers and small children"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:src="@drawable/ic_restroom_18dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:textColor="@android:color/white"
                                android:text="Public restrooms"/>

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Description -->
                    <TextView
                        android:id="@+id/parkDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/card_horizontal_margin"
                        android:layout_marginRight="@dimen/card_horizontal_margin"
                        android:layout_marginBottom="@dimen/card_vertical_margin"
                        android:padding="5dp"
                        android:background="@android:color/white"
                        android:text="This is a description of the park and what all it has in it and is a really long text line !"
                        android:textColor="@android:color/black"/>

                    <!-- Map View -->
                    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                        android:name="com.google.android.gms.maps.MapFragment"
                        android:id="@+id/map"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="@dimen/card_horizontal_margin"
                        android:layout_marginRight="@dimen/card_horizontal_margin"
                        android:layout_marginBottom="@dimen/card_vertical_margin"
                        android:layout_height="200dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
